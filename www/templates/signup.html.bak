<ion-modal-view>
    <ion-header-bar class="bar bar-header bar-positive">
        <h1 class="title">Créer un nouveau profil</h1>
        <button class="button button-clear button-primary" ng-click="modal.hide()">Annuler</button>
    </ion-header-bar>
    <ion-content class="padding">
		<div class="item item-image">
			<img src="img/blablacarbanner.png">
		</div>
		
        <div class="list">
            <label class="item item-input">
                <span class="input-label">Pseudo</span>
                <input ng-model="user.login" type="text">
            </label>
            <label class="item item-input">
                <span class="input-label">Password</span>
                <input ng-model="user.password" type="password">
            </label>
            <button class="button button-full button-positive" ng-click="createUser(user)">Créer</button>
        </div>
    </ion-content>
</ion-modal-view>

